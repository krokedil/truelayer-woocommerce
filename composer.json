            "wpify/scoper": true
        }
    },
    "require-dev": {
        "php-stubs/woocommerce-stubs": "^8.1",
        "phpunit/phpunit": "^9.6",
        "wpify/scoper": "^3.2"
    },
    "extra": {
        "wpify-scoper": {
